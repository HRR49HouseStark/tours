{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:import/react",
        "airbnb",
        "./node_modules/eslint-config-hackreactor/index.js"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "linebreak-style":"off",
        "no-console":"off",
        "no-unused-expressions":"off",
        "object-curly-newline":"off"
    }
}
